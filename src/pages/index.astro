---
import CatFetcher from "../components/CatFetcher.tsx";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Astro + Tailwind + Cat API</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <main class="container mx-auto px-4 py-10">
      <h1 class="text-3xl font-bold tracking-tight">Cat Fetcher</h1>
      <p class="mt-2 text-gray-600">
        Click the button to fetch a random cat URL from Cataas.
      </p>

      <div class="mt-8">
        <CatFetcher client:load />
      </div>
    </main>
  </body>
</html>